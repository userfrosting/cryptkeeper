{% block navigation %}
    {% if checkAccess('uri_dashboard') %}
    <li>
        <a href="{{site.uri.public}}/dashboard"><i class="fa fa-dashboard fa-fw"></i> <span>{{ translate("DASHBOARD") }}</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_holdings') %}
    <li>
        <a href="{{site.uri.public}}/holdings"><i class="fa fa-briefcase fa-fw"></i> <span>My Holdings</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_holdings') %}
    <li>
        <a href="{{site.uri.public}}/transactions"><i class="fa fa-handshake-o fa-fw"></i> <span>Transactions</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_transfers') %}
    <li>
        <a href="{{site.uri.public}}/transfers"><i class="fa fa-exchange fa-fw"></i> <span>Transfers</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_currencies') %}
    <li>
        <a href="{{site.uri.public}}/currencies"><i class="fa fa-money fa-fw"></i> <span>Currencies</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_markets') %}
    <li>
        <a href="{{site.uri.public}}/markets"><i class="fa fa-institution fa-fw"></i> <span>Markets</span></a>
    </li>
    {% endif %}

    {% if checkAccess('uri_activities') %}
        <li>
            <a href="{{site.uri.public}}/activities"><i class="fa fa-tasks fa-fw"></i> <span>User {{ translate("ACTIVITY", 1) }}</span></a>
        </li>
    {% endif %}
    {% if checkAccess('uri_users') %}
    <li class="treeview">
        <a href="#">
          <i class="fa fa-wrench"></i>
          <span>Site Administration</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-down"></i>
          </span>
        </a>
        <ul class="treeview-menu">
            {% if checkAccess('uri_users') %}
            <li>
                <a href="{{site.uri.public}}/users"><i class="fa fa-user fa-fw"></i> <span>{{ translate("USER", 2) }}</span></a>
            </li>
            {% elseif checkAccess('uri_group', {
                'group': current_user.group
            }) %}
            <li>
                <a href="{{site.uri.public}}/groups/g/{{current_user.group.slug}}"><i class="{{current_user.group.icon}} fa-fw"></i> <span>Manage Group</span></a>
            </li>
            {% endif %}
            {% if checkAccess('uri_roles') %}
            <li>
                <a href="{{site.uri.public}}/roles"><i class="fa fa-drivers-license fa-fw"></i> <span>{{ translate("ROLE", 2) }}</span></a>
            </li>
            {% endif %}
            {% if checkAccess('uri_permissions') %}
            <li>
                <a href="{{site.uri.public}}/permissions"><i class="fa fa-key fa-fw"></i> <span>{{ translate("PERMISSION", 2) }}</span></a>
            </li>
            {% endif %}
            {% if checkAccess('uri_groups') %}
            <li>
                <a href="{{site.uri.public}}/groups"><i class="fa fa-users fa-fw"></i> <span>{{ translate("GROUP", 2) }}</span></a>
            </li>
            {% endif %}
        </ul>
    </li>
    {% endif %}
{% endblock %}
